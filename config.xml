<?xml version='1.0' encoding='utf-8'?>
<widget id="net.brosulo.framework7.boilerplate" version="1.0.3" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Framework7 cordova boilerplate</name>
    <description>
        Framework7 cordova boilerplate with ios/android template engine
    </description>
    <author email="gabriele@brosulo.net" href="http://brosulo.net">
        Gabriele Brosulo
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
